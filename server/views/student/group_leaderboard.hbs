<div class="leaderboard-card">
  <h2>Group: {{group.projectId.title}}</h2>
  <h3>Member Progress</h3>
  <table>
    <tr>
      <th>Member</th>
      <th>Completed</th>
      <th>Total</th>
      <th>Progress</th>
    </tr>
    {{#each memberStats}}
      <tr>
        <td>{{name}}</td>
        <td>{{completed}}</td>
        <td>{{total}}</td>
        <td>{{percent}}%</td>
      </tr>
    {{/each}}
  </table>
</div>
<style>
.leaderboard-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
